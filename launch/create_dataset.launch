<?xml version="1.0"?>
<launch>
    <arg name="bagfile" default="$(env HOME)/bagfiles/rwrc23_main_2024-04-25-16-17-54.bag"/>
    <arg name="image_topic" default="/grasscam/image_raw"/>
    <include file="$(find visual_place_recognition_ros)/launch/unzipping.launch">
        <arg name="image_topic" value="$(arg image_topic)"/>
    </include>
    <node pkg="rosbag" type="play" name="rosbag" args="
        $(arg bagfile)
        --clock
        --pause
        --topics
        /grasscam/image_raw/compressed
        /odom
        "/>
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find visual_place_recognition_ros)/launch/create_dataset.rviz"/>
</launch>
